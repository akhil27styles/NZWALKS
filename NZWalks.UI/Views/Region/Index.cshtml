@model IEnumerable<NZWalks.UI.Models.RegionDto>
@{
}

<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-primary mt-3" asp-controller="Region" asp-action="Add">Add Region</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Code</td>
                <td>@region.Name</td>
                <td class="d-flex gap-2">
                    <a asp-controller="Region" asp-action="Edit" asp-route-id="@region.Id"
                       class="btn btn-light">Edit</a>

                    <form asp-controller="Region" asp-action="Delete" asp-route-id="@region.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this region?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
